<% layout("/layouts/boilerplate") %>

<div class="row mt-3">



    <div class="col-6 offset-3">
    <h3>Sign Up</h3>
        <form action="/signup" method="post" class="needs-validation" novalidate>
      <div class="mb-3">
        <label for="username" class="form-label">username</label>
        <input name="username"  class="form-control" type="text" id="username" required>
        <div class="valid-feedback">username looks good</div>
      </div>

      <div class="mb-3">
        <label for="email" class="form-label">email</label>
        <input name="email"  class="form-control" type="text" id="email" required>
        <div class="valid-feedback">email looks good</div>
      </div>

      <div class="mb-3">
        <label for="password" class="form-label">password</label>
        <input name="password"  class="form-control" type="password" id="password" required>
        
      </div>

<button class="btn btn-success">Sign-Up</button>

</form>

    </div>




    
    
</div>