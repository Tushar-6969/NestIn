<% layout("/layouts/boilerplate") %>

<div class="row">
  <div class="col-8 offset-2">
    <h3>Edit this listing</h3>

    <form method="post" class="needs-validation" enctype="multipart/form-data" novalidate action="/listings/<%= listing_detail._id %>?_method=PUT">

      <div class="mb-3">
        <label for="title" class="form-label">Title</label>
        <input name="listing[title]" value="<%= listing_detail.title %>" class="form-control" required type="text">
        <div class="valid-feedback">Title looks good</div>
      </div>

      <div class="mb-3">
        <label for="description" class="form-label">Description</label>
        <textarea name="listing[description]" class="form-control" required><%= listing_detail.description %></textarea>
        <div class="invalid-feedback">Enter valid description</div>
      </div>

      <div class="mb-3">
        <label for="location" class="form-label">Location</label>
        <input name="listing[location]" value="<%= listing_detail.location %>" required class="form-control" type="text">
        <div class="invalid-feedback">Enter valid location</div>
      </div>




      <div class="mb-3">
Original Listing Image <br/>
<img src="<%=orgimg%>"/>
      </div>


      <div class="mb-3">
        <label for="image" class="form-label">Upload Image</label>
        <input name="listing[image]" value="<%= listing_detail.image %>" class="form-control" type="file" required type="text">
        <div class="invalid-feedback">Upload valid image/div>
      </div>

      <div class="row">
        <div class="mb-3 col-4">
          <label for="price" class="form-label">Price</label>
          <input name="listing[price]" value="<%= listing_detail.price %>" type="number" required class="form-control">
          <div class="invalid-feedback">Please enter price correctly</div>
        </div>

        <div class="mb-3 col-8">
          <label for="country" class="form-label">Country</label>
          <input name="listing[country]" value="<%= listing_detail.country %>" required type="text" class="form-control">
          <div class="invalid-feedback">Please enter country correctly</div>
        </div>
      </div>

      <button type="submit" class="btn btn-dark add-btn" style="background-color: red; color: white !important">Edit</button>
    </form>
  </div>
</div>
